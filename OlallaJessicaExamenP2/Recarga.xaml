<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OlallaJessicaExamenP2.Recarga"
             Title="Recarga">

    <StackLayout Margin="20" Spacing="6">
        <Label Text="Ingrese el numero de telefono:" />
        <Editor x:Name="TextEditorJO"
        Placeholder="Numero de telefono:"
        Text="{Binding Text}"
        HeightRequest="100" />

        <Label Text="Ingrese el nombre de quien realiza la recarga:" />
        <Editor x:Name="TextEditor2JO"
            Placeholder="Nnombre de quien realiza la recarga:"
            Text="{Binding Text}"
            HeightRequest="100" />

        <Label Text="JO, La ultima recarga realizada fue:" />
        
        <Button
         x:Name="JORecarga"
         Text="Recargar" />
        <!--Clicked="RecargaClicked"/-->
    </StackLayout>
</ContentPage>